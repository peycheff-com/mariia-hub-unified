# =================================
# STAGING ENVIRONMENT CONFIGURATION
# =================================
# This file contains staging-specific environment variables
# Copy this file to .env.staging and fill in actual values
#
# SECURITY NOTES:
# - Never commit this file with real secrets
# - Use GitHub Secrets or Vercel Environment Variables
# - All staging data should be anonymized test data

# Supabase Staging Configuration
# =================================
# Create a separate Supabase project for staging or use Supabase Branching
VITE_SUPABASE_PROJECT_ID="staging-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="staging-publishable-key"
VITE_SUPABASE_URL="${STAGING_SUPABASE_URL}"
VITE_SUPABASE_ANON_KEY="${STAGING_SUPABASE_ANON_KEY}"
SUPABASE_SERVICE_ROLE_KEY="${STAGING_SUPABASE_SERVICE_ROLE_KEY}"

# Staging Database Configuration
# =================================
# Supabase Branching Configuration (if using)
SUPABASE_BRANCH="staging"
SUPABASE_PARENT_BRANCH="main"

# Application Staging Configuration
# =================================
VITE_APP_NAME="Mariia Hub - Staging"
VITE_APP_DESCRIPTION="Staging environment for Mariia Hub - Beauty & Fitness Booking Platform"
VITE_APP_URL="https://staging.mariia-hub.com"
VITE_APP_ENV="staging"
VITE_APP_VERSION="1.0.0-staging"

# Sentry Error Monitoring (Staging)
# =================================
# Use a separate Sentry project for staging
VITE_SENTRY_DSN="${STAGING_SENTRY_DSN}"
VITE_SENTRY_ENVIRONMENT="staging"

# Resend Email Service (Staging)
# =================================
# Use staging-specific email configuration
RESEND_API_KEY="${STAGING_RESEND_API_KEY}"
RESEND_FROM_EMAIL="staging@mariia-hub.com"

# Stripe Configuration (Staging)
# =================================
# Use Stripe test mode for staging
VITE_STRIPE_PUBLIC_KEY="${STAGING_STRIPE_PUBLIC_KEY}"
STRIPE_SECRET_KEY="${STAGING_STRIPE_SECRET_KEY}"
STRIPE_WEBHOOK_SECRET="${STAGING_STRIPE_WEBHOOK_SECRET}"

# Google Analytics / Tag Manager (Staging)
# =================================
# Use staging-specific GTM container
VITE_GA_MEASUREMENT_ID="${STAGING_GA_MEASUREMENT_ID}"
VITE_GTM_CONTAINER_ID="GTM-STAGING"

# AI Services (Staging)
# =================================
# Use separate AI keys for staging to avoid affecting production data
LOVABLE_API_KEY="${STAGING_LOVABLE_API_KEY}"
OPENAI_API_KEY="${STAGING_OPENAI_API_KEY}"

# AI Feature Flags (Staging)
# =================================
# Enable all features for comprehensive testing
VITE_AI_CONTENT_GENERATION=true
VITE_AI_SMART_SCHEDULING=true
VITE_AI_TRANSLATION=true
VITE_AI_RECOMMENDATIONS=true
VITE_AI_CHATBOT=true

# External Integrations - Reviews System (Staging)
# =================================
# Use test API keys for staging
GOOGLE_PLACES_API_KEY="${STAGING_GOOGLE_MAPS_API_KEY}"
GOOGLE_PLACE_ID="${STAGING_GOOGLE_PLACE_ID}"
TWITTER_BEARER_TOKEN="${STAGING_TWITTER_BEARER_TOKEN}"

# Social Media APIs (Staging)
# =================================
INSTAGRAM_ACCESS_TOKEN="${STAGING_INSTAGRAM_ACCESS_TOKEN}"
INSTAGRAM_BUSINESS_ID="${STAGING_INSTAGRAM_BUSINESS_ID}"
FACEBOOK_APP_ID="${STAGING_FACEBOOK_APP_ID}"
FACEBOOK_APP_SECRET="${STAGING_FACEBOOK_APP_SECRET}"

# Feature Flags (Staging)
# =================================
# Enable all features for testing
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_NEWSLETTER=true
VITE_ENABLE_CSV_IMPORT=true

# Currency and Localization (Staging)
# =================================
VITE_DEFAULT_CURRENCY="PLN"
VITE_DEFAULT_LANGUAGE="en"
VITE_SUPPORTED_LANGUAGES="en,pl"

# Admin Settings (Staging)
# =================================
ADMIN_EMAIL="staging-admin@mariia-hub.com"

# API Configuration (Staging)
# =================================
VITE_API_URL="https://staging-api.mariia-hub.com"
VITE_WS_URL="wss://staging-ws.mariia-hub.com"

# External Services (Staging)
# =================================
VITE_BOOKSY_API_URL="https://api.booksy.com"

# Development Settings (Staging)
# =================================
VITE_DEBUG_MODE=true
VITE_LOG_LEVEL="debug"
VITE_MOCK_API=false
VITE_HMR=false
VITE_SOURCE_MAP=true

# Cache Settings (Staging)
# =================================
VITE_CACHE_TTL=300000
VITE_ENABLE_OFFLINE=true
CACHE_DURATION=60

# Booking Configuration (Staging)
# =================================
VITE_BOOKING_TIMEOUT=900000
VITE_MAX_BOOKING_VALUE=10000
DEFAULT_BOOKING_DURATION=60
MAX_BOOKING_WINDOW=30
MIN_CANCELLATION_HOURS=2

# File Upload Settings (Staging)
# =================================
# Smaller limits for staging
MAX_IMAGE_SIZE=5
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# Rate Limiting (Staging)
# =================================
# More lenient for testing
RATE_LIMIT_RPM=120

# Maintenance Mode (Staging)
# =================================
MAINTENANCE_MODE=false

# Custom Domain (Staging)
# =================================
VITE_CUSTOM_DOMAIN="https://staging.mariia-hub.com"

# CDN Settings (Staging)
# =================================
VITE_CDN_URL="https://staging-cdn.mariia-hub.com"

# Backup Settings (Staging)
# =================================
# Shorter retention for staging
ENABLE_BACKUPS=true
BACKUP_RETENTION_DAYS=7

# Staging-Specific Settings
# =================================
# Enable debugging and verbose logging
VITE_ENABLE_TEST_MODE=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=true
VITE_ENABLE_BETA_FEATURES=true

# Performance Monitoring (Staging)
# =================================
# Enable performance monitoring
VITE_PERFORMANCE_SAMPLE_RATE=0.5

# Security Settings (Staging)
# =================================
# Less strict security for testing
CORS_ORIGIN="http://localhost:3000,https://staging.mariia-hub.com"
RATE_LIMIT_STRICT=false
REQUIRE_2FA=false

# Database Configuration (Staging)
# =================================
# Connection pool settings for staging
DB_POOL_SIZE=5
DB_CONNECTION_TIMEOUT=30000

# Webhook Configuration (Staging)
# =================================
# Use ngrok or similar for local testing
WEBHOOK_BASE_URL="https://staging.mariia-hub.com/webhooks"
WEBHOOK_SECRET="${STAGING_WEBHOOK_SECRET}"