# Supabase Configuration
# Replace with your actual values from Supabase Dashboard > Settings > API
VITE_SUPABASE_PROJECT_ID="your-project-id"
VITE_SUPABASE_PUBLISHABLE_KEY="your-publishable-key"
VITE_SUPABASE_URL="https://your-project.supabase.co"

# Application Configuration
VITE_APP_NAME="Mariia Hub"
VITE_APP_URL="http://localhost:8080"
VITE_APP_ENV="development"

# Sentry Error Monitoring (optional)
# Get your DSN from https://sentry.io
VITE_SENTRY_DSN="your-sentry-dsn"

# App version for Sentry tracking
VITE_APP_VERSION="1.0.0"

# Resend Email Service
# Get your API key from https://resend.com
# Add this as a secret in Supabase Edge Functions
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Stripe Payment Integration
# Get these from https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Google Analytics 4 Configuration
VITE_GA4_MEASUREMENT_ID="G-XXXXXXXXXX"
VITE_GA4_API_SECRET="your-ga4-api-secret"
VITE_GA4_STREAM_ID="your-ga4-stream-id"

# Hotjar Configuration (for heatmaps and session recording)
VITE_HOTJAR_ID="your-hotjar-site-id"

# Advanced Analytics Configuration
VITE_ANALYTICS_ENABLED=true
VITE_BEHAVIOR_TRACKING_ENABLED=true
VITE_PERFORMANCE_TRACKING_ENABLED=true
VITE_AB_TESTING_ENABLED=true
VITE_SESSION_RECORDING_ENABLED=true
VITE_CONVERSION_TRACKING_ENABLED=true

# GDPR Compliance
VITE_GDPR_ENABLED=true
VITE_COOKIE_CONSENT_REQUIRED=true
VITE_DATA_RETENTION_DAYS=730
VITE_IP_ANONYMIZATION=true

# Analytics Sampling Rates
VITE_SESSION_RECORDING_SAMPLE_RATE=10
VITE_BEHAVIOR_TRACKING_SAMPLE_RATE=100
VITE_PERFORMANCE_TRACKING_SAMPLE_RATE=100

# Google Analytics / Tag Manager (legacy)
VITE_GTM_CONTAINER_ID="GTM-XXXXXXX"

# AI Services (Lovable AI)
LOVABLE_API_KEY="your-lovable-api-key"

# OpenAI API (for AI features)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY="sk-your-openai-api-key"

# AI Feature Flags
VITE_AI_CONTENT_GENERATION=true
VITE_AI_SMART_SCHEDULING=true
VITE_AI_TRANSLATION=true
VITE_AI_RECOMMENDATIONS=true
VITE_AI_CHATBOT=false

# External Integrations - Reviews System
# Note: Booksy does not provide a public API for integration
# To migrate from Booksy, use CSV export/import functionality

# Google Places API for Google Reviews sync
GOOGLE_PLACES_API_KEY="your-google-places-api-key"
GOOGLE_PLACE_ID="your-google-place-id"

# Twitter API for review aggregation
TWITTER_BEARER_TOKEN="your-twitter-bearer-token"

# Social Media APIs
# Instagram Business API (for displaying feeds)
INSTAGRAM_ACCESS_TOKEN="your-instagram-access-token"
INSTAGRAM_BUSINESS_ID="your-instagram-business-id"

# Facebook (if using Facebook Login or Graph API)
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# Google Services
# Google Maps API (if using location services)
VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Location Services
# IP-based location detection (optional - free tier available)
VITE_IPINFO_TOKEN="your-ipinfo-token"

# Feature Flags
# Enable/disable features in different environments
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_SOCIAL_LOGIN=false
VITE_ENABLE_NEWSLETTER=true
# Feature flags for external integrations
VITE_ENABLE_CSV_IMPORT=true

# Currency and Localization
VITE_DEFAULT_CURRENCY="PLN"
VITE_DEFAULT_LOCALE="en"

# Admin Settings
ADMIN_EMAIL="admin@yourdomain.com"

# Alerting Integrations
SLACK_ALERTS_WEBHOOK=""
ALERTS_WEBHOOK_URL=""
SLACK_WEBHOOK_URL=""
PAGERDUTY_WEBHOOK_URL=""
PAGERDUTY_SERVICE_KEY=""

# WhatsApp Business API
WHATSAPP_PHONE_NUMBER_ID=""
WHATSAPP_ACCESS_TOKEN=""
WHATSAPP_API_VERSION="v18.0"
WHATSAPP_WABA_ID=""
WHATSAPP_WEBHOOK_VERIFY_TOKEN=""

# Booking Configuration
DEFAULT_BOOKING_DURATION=60
MAX_BOOKING_WINDOW=90
MIN_CANCELLATION_HOURS=24

# File Upload Settings
MAX_IMAGE_SIZE=10
ALLOWED_IMAGE_TYPES="jpg,jpeg,png,webp"

# Cache Settings
CACHE_DURATION=300

# Rate Limiting
RATE_LIMIT_RPM=60

# Maintenance Mode
MAINTENANCE_MODE=false

# Custom Domain (production only)
VITE_CUSTOM_DOMAIN="https://yourdomain.com"

# CDN Settings (optional)
VITE_CDN_URL="https://cdn.yourdomain.com"

# Backup Settings
ENABLE_BACKUPS=true
BACKUP_RETENTION_DAYS=30

# Development Settings
VITE_HMR=true
VITE_SOURCE_MAP=true

# Security & Verification
RECAPTCHA_SECRET_KEY=""
GSC_API_KEY=""
GA_API_KEY=""
